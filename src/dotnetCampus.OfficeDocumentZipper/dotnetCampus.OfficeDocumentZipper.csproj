<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <UseWPF>true</UseWPF>

        <PackAsTool>true</PackAsTool>

        <ToolCommandName>OfficeDocumentZipper</ToolCommandName>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Icon.png" />
    </ItemGroup>

    <ItemGroup>
      <Resource Include="Icon.png" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="DocumentFormat.OpenXml" Version="2.11.0" />
        <PackageReference Include="DotNetZip" Version="1.13.8" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\dotnetCampus.OpenXMLUnitConverter\dotnetCampus.OpenXMLUnitConverter.csproj" />
    </ItemGroup>
</Project>